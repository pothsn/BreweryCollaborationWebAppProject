@{
    ViewData["Title"] = "NewsFeedDetails";
}

<h2>News Feed</h2>

<div>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BeerStyle)
                </th>
                <th>
