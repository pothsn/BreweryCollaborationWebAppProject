    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Collaboration</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name):
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
