@model IEnumerable<BreweryCollaborationWebbApp.Models.Fan>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Zipcode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikesAle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikesLager)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikesIPA)
            </th>
