@model IEnumerable<BreweryCollaborationWebbApp.Models.Brewery>

@{
    ViewData["Title"] = "Index";
}

<h2>Breweries</h2>
<style>
    /* Set the size of the div element that contains the map */
    #map {
        height: 400px; /* The height is 400 pixels */
        width: 100%; /* The width is the width of the web page */
    }
</style>

<div class="row">
    <div id="map"></div>
    <script>
        var breweries = @Html.Raw(Json.Serialize(Model));
        var thing = breweries.followers.length;
        console.log("test", breweries);
        // Initialize and add the map
        function initMap() {

            var milwaukee = { lat: 43.038, lng: -87.906 };
            var map = new google.maps.Map(
                document.getElementById('map'), { zoom: 10, center: milwaukee });
            for (var i = 0; i < breweries.length; i++) {
                console.log("brewery", breweries[i]);
                if (breweries[i].collaboration == true) {
                    var followers = breweries[i].followers;

                    //THIS BRINGS UP EACH INFO WINDOW FOR EACH MARKER AND DISPLAYS THE BREWERY NAME DYNAMICALLY
                    var infowindow = new google.maps.InfoWindow();
                    var marker, i;
                    for (var i = 0; i < breweries.length; i++) {
                        marker = new google.maps.Marker({
                            position: new google.maps.LatLng({ lat: breweries[i].latitude, lng: breweries[i].longitude }),
                            map: map
                        });
                        google.maps.event.addListener(marker, 'click', (function (marker, i) {
                            return function () {
                                infowindow.setContent(breweries[i].name, breweries[i].website);
                                infowindow.open(map, marker);
                            }
                        })(marker, i));
                    }
                }
            };
        };

    </script>

    <script src=@($"https://maps.googleapis.com/maps/api/js?key={@ViewBag.GoogleMapsAPIKey}&callback=initMap")
            async defer></script>

</div>

